-- put in ServerScriptService
-- ğŸ”’ Admin Configuration: Add Admin UserIds
local Admins = {
    [123456789] = true, -- Replace with your UserId
    [987654321] = true, -- Add more admins if needed
}

-- ğŸš¨ Security: Stores warnings & banned users
local WarningTracker = {}
local BannedPlayers = {}

-- ğŸ“œ Execution Logs (For Review)
local ExecutionLogs = {}

-- ğŸš€ Send Warning & Ban System
local function SendWarning(player)
    local userId = player.UserId

    -- ğŸš« Already Banned? Auto-Kick on Join
    if BannedPlayers[userId] then
        player:Kick("âŒ You are permanently banned from this game!")
        return
    end

    -- âš  Track Warnings
    WarningTracker[userId] = (WarningTracker[userId] or 0) + 1

    if WarningTracker[userId] == 1 then
        player:Kick("âš ï¸ WARNING 1: Unauthorized script execution detected!")
    elseif WarningTracker[userId] == 2 then
        player:Kick("âš ï¸ FINAL WARNING: One more attempt = PERMANENT BAN!")
    else
        -- ğŸš¨ Permanent Ban ğŸš¨
        BannedPlayers[userId] = true
        player:Kick("âŒ You have been PERMANENTLY BANNED for unauthorized access!")
    end
end

-- ğŸ›‘ Auto-Kick Banned Players on Join
game.Players.PlayerAdded:Connect(function(player)
    if BannedPlayers[player.UserId] then
        player:Kick("âŒ You are permanently banned from this game!")
    end
end)

-- ğŸ›¡ï¸ Secure Chat Command for Admins
game.Players.PlayerChatted:Connect(function(player, message)
    if string.sub(message, 1, 7) == "insert/" then
        local scriptToRun = string.sub(message, 8) -- Extract script content

        -- âœ… Admin Verification
        if Admins[player.UserId] then
            local success, err = pcall(function()
                -- ğŸ” Execute Script Securely
                loadstring(scriptToRun)()
            end)

            -- ğŸ“œ Log Execution
            table.insert(ExecutionLogs, {
                Admin = player.Name,
                Script = scriptToRun,
                Timestamp = os.time()
            })

            -- ğŸ›‘ Error Handling
            if not success then
                player:Kick("âš ï¸ SCRIPT ERROR: " .. tostring(err))
            else
                player:SendNotification("âœ… Script Executed Successfully!")
            end
        else
            -- ğŸš¨ Unauthorized Attempt Detected
            SendWarning(player)
        end
    end
end)
